---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: false,
    title: "Mission",
    subTitle:
      "Fournir des solutions intégrées dans les domaines de la restauration, du nettoyage, de la logistique hôtelière et de l'agroalimentaire, avec un haut niveau d'exigence.",
    img: personWorking,
    imgAlt: "Équipe MAFA au travail",
  },
  {
    isRightSection: true,
    title: "Vision",
    subTitle:
      "Devenir un acteur panafricain de référence dans la chaîne de valeur hôtelière, alimentaire et de services.",
    single: false,
    imgOne: aerialView,
    imgOneAlt: "Vue aérienne de l'Afrique",
    imgTwo: constructionWorkers,
    imgTwoAlt: "Équipe professionnelle MAFA",
  },
  {
    isRightSection: false,
    title: "Valeurs",
    subTitle:
      "Qualité – Professionnalisme – Innovation – Responsabilité – Proximité. Ces valeurs fondamentales guident chacune de nos actions et définissent notre engagement envers l'excellence opérationnelle et le développement durable.",
    img: usingTools,
    imgAlt: "Valeurs et engagement MAFA",
  },
  {
    isRightSection: true,
    title: "Engagement QHSE",
    subTitle:
      "MAFA adopte une démarche rigoureuse en matière de qualité, hygiène, sécurité et environnement, conforme aux normes internationales. Notre système de management intégré garantit la traçabilité, la conformité réglementaire et l'amélioration continue de nos processus.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Standards de qualité et normes",
    imgTwo: beforeAfter,
    imgTwoAlt: "Processus d'amélioration continue",
  },
];
---

<MainLayout
  title="À propos de MAFA | MAFA"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://mafa.com/fr/about",
    url: "https://mafa.com/fr/about",
    name: "À propos de MAFA",
    description:
      "Découvrez MAFA, une entreprise multisectorielle engagée en Afrique dans la restauration, le nettoyage, la logistique hôtelière, la formation culinaire, la transformation agroalimentaire et les services stratégiques.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://mafa.com/fr",
      name: "MAFA",
      description:
        "MAFA est une entreprise multisectorielle engagée en Afrique dans six domaines complémentaires.",
    },
    inLanguage: "fr",
  }}
>
  {/* MainSection is the introductory section of the page */}
  <MainSection
    title="À propos de MAFA"
    subTitle="Depuis sa création, MAFA s'engage à offrir des services de qualité à ses partenaires publics et privés en Afrique. Son approche multisectorielle répond aux enjeux actuels de développement durable, d'hygiène et de performance opérationnelle."
    btnExists={false}
  />
  {/* RightSection and LeftSection contain details about Mission, Vision, Values and QHSE commitment.
  They alternate for variety in design.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
</MainLayout>

