---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/marmite.png";
import forafricain from "@images/new/africa.png";
import mohamed from "@images/new/mohamed.jpeg";
import forafricaJfif from "@images/new/forafrica.png";
import foodImage from "@images/new/food.png";
import nettoyage from "@images/new/nettoyage.png";
import hotel from "@images/new/hotel.png"
import formation2 from "@images/new/formation.png"
import mafa from "@images/new/mafa.mp4";
import formation from "@images/new/mafa1.jfif";
import quality from "@images/new/mafa2.jfif";
import QHSE from "@images/new/QHSE.jfif";
import faqs from "@data/fr/faqs.json";
import features from "@data/fr/features.json";
import pricing from "@data/fr/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { getRelativeLocaleUrl } from "astro:i18n";
import { partnersData } from "@/data_files/constants";
import type { ImageMetadata } from "astro";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout lang="fr">
  <HeroSection
    title="MAFA —"
    rightText="Multisectorielle|Innovante"
    subTitle="L'excellence au service de la restauration, de la logistique et du développement durable. MAFA est une entreprise multisectorielle engagée en Afrique dans six domaines complémentaires : restauration, nettoyage, logistique hôtelière, formation culinaire, transformation agroalimentaire, conseil & maintenance. Elle incarne qualité, expertise et engagement."
    primaryBtn="Découvrir MAFA"
    primaryBtnURL={getRelativeLocaleUrl("fr", "services")}
    secondaryBtn="Demander un devis"
    secondaryBtnURL={getRelativeLocaleUrl("fr", "contact")}
    withReview={false}
    src={heroImage}
    alt="MAFA - Entreprise multisectorielle innovante"
    width={500}
    height={500}
  />

  <!-- <ClientsSection
    title="Faites confiance aux leaders de l'industrie"
    subTitle="Découvrez la fiabilité choisie par les géants de l'industrie."
    partners={partnersData}
  /> -->

  <FeaturesGeneral
    title="Aperçu des 6 pôles"
    subTitle="Découvrez nos six domaines d'expertise complémentaires qui font de MAFA un partenaire de choix pour vos projets en Afrique."
    images={[
      { src: forafricain, alt: "Carte de l'Afrique - Présence MAFA" },
      { src: nettoyage, alt: "Transformation agroalimentaire MAFA" },
      { src: hotel, alt: "Transformation agroalimentaire MAFA" },
      { src: formation2, alt: "Carte de l'Afrique - Présence MAFA" },
      { src: formation2, alt: "Transformation agroalimentaire MAFA" },
      { src: foodImage, alt: "Transformation agroalimentaire MAFA" },
    ]}
    width={500}
    height={500}
    features={features}
  />

  <FeaturesNavs
    title="Adaptez les solutions MAFA à vos besoins"
    tabs={[
      {
        heading: "Restauration & Services alimentaires",
        content:
          "Solutions de restauration sur mesure pour sites miniers, hôpitaux, institutions et événements. Services sûrs, hygiéniques et cohérents partout où nos partenaires opèrent.",
        svg: "tools",
        src: mafa,
        alt: "Services de restauration MAFA",
        first: true,
        video: true,
      },
      {
        heading: "Formation culinaire & Placement",
        content:
          "Programmes de formation certifiés pour cuisiniers et chefs, suivis d'un placement dans hôtels, restaurants et institutions partenaires. Théorie, pratique intensive et coaching de carrière.",
        svg: "dashboard",
        src: formation,
        alt: "Formation culinaire MAFA",
        second: true,
        width: 1200,
        height: 800,
      },
      {
        heading: "Qualité & Conformité QHSE",
        content:
          "Procédures QHSE rigoureuses, audits réguliers et formation continue pour garantir des standards internationaux dans tous nos secteurs d'activité.",
        svg: "house",
        src: QHSE,
        alt: "Standards qualité MAFA",
        width: 1200,
        height: 800,
      },
    ]}
  />

  <TestimonialsSection
    title="Accélérez vos projets avec MAFA"
    subTitle="Nos équipes déploient des solutions clés en main, du catering à la maintenance, pour garantir un démarrage opérationnel en quelques semaines."
    testimonials={[
      {
        content:
          "MAFA a repris la restauration et la logistique de notre base-vie en assurant une traçabilité rigoureuse. Leur présence terrain et leur réactivité font toute la différence pour nos équipes.",
        author: "Mohamed Traoré",
        role: "Responsable logistique | Groupe minier sahélien",
        avatarSrc: mohamed as ImageMetadata,
      },
    ]}
    statistics={[
      {
        count: "250+",
        description:
          "projets multisectoriels livrés",
      },
      {
        count: "15 pays",
        description:
          "présence opérationnelle sur le continent",
      },
      {
        count: "98%",
        description:
          "taux de satisfaction clients",
      },
      {
        count: "24/7",
        description: "support et supervision",
      },
    ]}
  />

  <!-- <PricingSection pricing={pricing} /> -->

  <FAQ title="Questions<br />fréquemment posées" faqs={faqs} />

  <!-- <HeroSectionAlt
    title="Construisons ensemble"
    subTitle="MAFA est une entreprise multisectorielle innovante, méticuleusement conçue avec les frameworks Astro, Tailwind CSS et Preline UI."
    url="/contact"
  /> -->
</MainLayout>
