---
import MainLayout from "@/layouts/MainLayout.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import { Image } from "astro:assets";

import constructionImage from "@images/construction-image.avif";
import beforeAfter from "@images/before-after.avif";
import dashboardImage from "@images/dashboard-image.avif";
import personWorking from "@images/person-working.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";

const galleryItems = [
  {
    title: "Cuisine collective sur chantier minier",
    description:
      "Organisation complète des cuisines de base-vie : production, distribution, hygiène et traçabilité pour servir des centaines de repas quotidiens.",
    img: constructionImage,
    alt: "Cuisine collective sur un chantier minier",
  },
  {
    title: "Équipe de nettoyage industriel en action",
    description:
      "Interventions QHSE sur sites sensibles, avec protocoles adaptés aux zones hospitalières, hôtelières et industrielles.",
    img: beforeAfter,
    alt: "Équipe de nettoyage industriel MAFA",
  },
  {
    title: "Livraisons de matériel hôtelier",
    description:
      "Gestion logistique et distribution de consommables, linge, équipements et pièces détachées pour les hôtels et restaurants.",
    img: dashboardImage,
    alt: "Livraisons et logistique hôtelière",
  },
  {
    title: "Formation culinaire en cuisine école",
    description:
      "Parcours certifiants pour cuisiniers : ateliers pratiques, évaluation continue et accompagnement vers l’emploi.",
    img: personWorking,
    alt: "Formation culinaire en cuisine école",
  },
  {
    title: "Unité de transformation agroalimentaire",
    description:
      "Valorisation des productions locales en denrées à forte valeur ajoutée, dans des ateliers conformes aux normes agroalimentaires.",
    img: progressBuilding,
    alt: "Unité de transformation agroalimentaire",
  },
  {
    title: "Session de maintenance en cuisine professionnelle",
    description:
      "Assistance technique, maintenance préventive et corrective pour garantir la continuité des opérations culinaires.",
    img: underConstruction,
    alt: "Maintenance en cuisine professionnelle",
  },
];

const testimonials = [
  {
    quote:
      "MAFA a su répondre aux exigences strictes de notre base-vie minière.",
    author: "Directeur logistique, Entreprise minière",
  },
  {
    quote: "Une équipe réactive et des services sur-mesure.",
    author: "Responsable des opérations, ONG",
  },
];
---

<MainLayout
  title="Galerie | MAFA"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://mafa.com/fr/gallery",
    url: "https://mafa.com/fr/gallery",
    name: "Galerie de projets MAFA",
    description:
      "Découvrez des réalisations représentatives des pôles MAFA : restauration, nettoyage, logistique, formation, agroalimentaire et maintenance.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://mafa.com/fr",
      name: "MAFA",
      description:
        "MAFA est une entreprise multisectorielle engagée en Afrique dans six domaines complémentaires.",
    },
    inLanguage: "fr",
  }}
>
  <section
    class="mx-auto max-w-[85rem] px-4 pt-16 text-center sm:px-6 lg:px-8 2xl:max-w-full"
  >
    <p class="text-sm font-semibold uppercase tracking-widest text-orange-500">
      Galerie
    </p>
    <h1
      class="mt-4 text-4xl font-bold tracking-tight text-balance text-neutral-800 md:text-5xl lg:text-6xl dark:text-neutral-200"
    >
      Projets emblématiques MAFA
    </h1>
    <p
      class="mx-auto mt-5 max-w-3xl text-lg text-pretty text-neutral-600 dark:text-neutral-400"
    >
      Une sélection d’illustrations symboliques retraçant nos interventions sur
      les différents pôles d’activité. Chaque visuel représente une
      mobilisation d’équipes et de savoir-faire au service de nos partenaires.
    </p>
  </section>

  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        galleryItems.map((item) => (
          <article
            class="flex flex-col rounded-2xl border border-neutral-200/70 bg-white/70 p-5 shadow-sm shadow-neutral-200/60 dark:border-white/10 dark:bg-white/[0.02] dark:shadow-none"
          >
            <div class="overflow-hidden rounded-xl">
              <Image
                class="h-56 w-full rounded-xl object-cover"
                src={item.img}
                alt={item.alt}
                draggable={"false"}
                format={"avif"}
              />
            </div>
            <div class="mt-5 flex-1">
              <h3
                class="text-xl font-semibold text-neutral-800 dark:text-neutral-100"
              >
                {item.title}
              </h3>
              <p class="mt-3 text-pretty text-neutral-600 dark:text-neutral-400">
                {item.description}
              </p>
            </div>
            <div class="mt-6">
              <PrimaryCTA title="En savoir plus" url="#contact" />
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] px-4 pb-16 sm:px-6 lg:px-8 2xl:max-w-full"
  >
    <div class="mx-auto max-w-3xl text-center">
      <p class="text-sm font-semibold uppercase tracking-widest text-orange-500">
        Témoignages
      </p>
      <h2
        class="mt-4 text-3xl font-bold text-balance text-neutral-800 md:text-4xl dark:text-neutral-200"
      >
        Ce que disent nos partenaires
      </h2>
    </div>
    <div class="mt-10 grid gap-6 md:grid-cols-2">
      {
        testimonials.map((item) => (
          <figure
            class="rounded-2xl border border-neutral-200/70 bg-white/70 p-6 shadow-sm shadow-neutral-200/60 dark:border-white/10 dark:bg-white/[0.02] dark:shadow-none"
          >
            <blockquote class="text-lg text-pretty text-neutral-700 dark:text-neutral-200">
              “{item.quote}”
            </blockquote>
            <figcaption class="mt-4 text-sm font-medium text-neutral-500 dark:text-neutral-400">
              — {item.author}
            </figcaption>
          </figure>
        ))
      }
    </div>
  </section>
</MainLayout>

