---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/fr/ContactSection_fr.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contactez MAFA | ${SITE.title}`;
const metaDescription =
  "Pour une demande de devis, un partenariat ou des informations, notre équipe vous répond dans les meilleurs délais.";
const ogTitle = "Contactez MAFA | MAFA";
---

<MainLayout
  title={pageTitle}
  lang="fr"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://mafa.com/fr/contact",
    url: "https://mafa.com/fr/contact",
    name: "Contactez MAFA | MAFA",
    description:
      "Pour une demande de devis, un partenariat ou des informations, notre équipe vous répond dans les meilleurs délais.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://mafa.com/fr",
      name: "MAFA",
      description:
        "MAFA est une entreprise multisectorielle engagée en Afrique dans six domaines complémentaires.",
    },
    inLanguage: "fr",
  }}
>
  <ContactSection />
</MainLayout>
