---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: false,
    title: "Catering & Multisector Food Services",
    subTitle:
      "MAFA delivers tailored food solutions to mining sites, hospitals, institutions, and events. We guarantee safe, hygienic, and consistent catering services wherever our partners operate.",
    img: personWorking,
    imgAlt: "MAFA catering operations on site",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Professional Cleaning & Maintenance",
    subTitle:
      "Industrial cleaning services for offices, hotels, kitchens, and hospitals, led by trained personnel using certified eco-friendly products to maintain spotless, compliant environments.",
    single: false,
    imgOne: usingTools,
    imgOneAlt: "Team performing professional cleaning",
    imgTwo: beforeAfter,
    imgTwoAlt: "Before and after cleaning results",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "/contact",
  },
  {
    isRightSection: false,
    title: "Hotel Supply & Logistics",
    subTitle:
      "Sourcing and nationwide delivery of hotel equipment, consumables, and kitchen materials, ensuring every property receives the right inventory at the right time.",
    img: blueprints,
    imgAlt: "Logistics planning for hotel supplies",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Culinary Training & Job Placement",
    subTitle:
      "Certified training programs for cooks and chefs, followed by placement in hotels, restaurants, and partner institutions. Each curriculum blends theory, intensive practice, and career coaching.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Culinary trainees in practice",
    imgTwo: aerialView,
    imgTwoAlt: "Partner network supporting placement",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "/contact",
  },
  {
    isRightSection: false,
    title: "Food Processing & Agro-industrial Production",
    subTitle:
      "Processing of local agricultural products into value-added food items, promoting short supply chains, food security, and new market opportunities for producers.",
    img: progressBuilding,
    imgAlt: "Agro-processing facility",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Consulting, Maintenance, and Partnerships",
    subTitle:
      "Strategic support to design, implement, or enhance service chains. MAFA also facilitates sustainable African partnerships with dedicated maintenance and follow-up.",
    single: false,
    imgOne: underConstruction,
    imgOneAlt: "Team providing maintenance support",
    imgTwo: progressBuilding,
    imgTwoAlt: "Strategic partner collaboration",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "/contact",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "Discover MAFA's six core service lines: catering, cleaning, hotel logistics, culinary training, agro-processing, and strategic partnerships.";
const ogTitle = "Integrated Services | MAFA";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://mafa.com/services",
    url: "https://mafa.com/services",
    name: "Integrated Services | MAFA",
    description:
      "Discover MAFA's six core service lines: catering, cleaning, hotel logistics, culinary training, agro-processing, and strategic partnerships.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://mafa.com",
      name: "MAFA",
      description:
        "MAFA is a multisector company supporting partners across catering, cleaning, logistics, training, agro-processing, and strategic services.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Operational Excellence Across Six Sectors"
    subTitle="MAFA combines multisector expertise, rigorous QHSE standards, and on-the-ground experience to support partners across Africa in catering, cleaning, logistics, training, agro-processing, and strategic projects."
    btnExists={true}
    btnTitle="Request a proposal"
    btnURL="/contact"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Across the Continent"
    subTitle="Each MAFA engagement is measured by reliability, proximity, and the tangible improvements delivered to our partners."
    mainStatTitle="6"
    mainStatSubTitle="complementary service pillars deployed for our clients"
    stats={[
      {
        stat: "100%",
        description: "compliance with QHSE standards",
      },
      {
        stat: "24/7",
        description: "operational support availability",
      },
      {
        stat: "Pan-African",
        description: "scope of our partnerships",
      },
    ]}
  />
</MainLayout>
