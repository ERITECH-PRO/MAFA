---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import beforeAfter from "@images/before-after.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: false,
    title: "Mission",
    subTitle:
      "Deliver integrated solutions in catering, cleaning, hotel logistics, and agro-processing with the highest standards of quality, hygiene, and professionalism.",
    img: personWorking,
    imgAlt: "MAFA team delivering integrated services",
  },
  {
    isRightSection: true,
    title: "Vision",
    subTitle:
      "Become a pan-African leader in the hospitality, food services, and support industries by combining operational excellence with sustainable development.",
    single: false,
    imgOne: aerialView,
    imgOneAlt: "Aerial view illustrating MAFA's pan-African reach",
    imgTwo: constructionWorkers,
    imgTwoAlt: "Professional team collaborating on-site",
  },
  {
    isRightSection: false,
    title: "Values",
    subTitle:
      "Quality – Professionalism – Innovation – Responsibility – Proximity. These values guide every MAFA engagement and build trusted, long-term relationships.",
    img: usingTools,
    imgAlt: "Symbolic representation of MAFA values",
  },
  {
    isRightSection: true,
    title: "QHSE Commitment",
    subTitle:
      "MAFA follows strict Quality, Hygiene, Safety, and Environmental standards that align with international regulations, ensuring continuous improvement and reliable service delivery.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Quality assurance planning",
    imgTwo: beforeAfter,
    imgTwoAlt: "Continuous improvement in action",
  },
];
---

<MainLayout
  title="About MAFA | MAFA"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://mafa.com/about",
    url: "https://mafa.com/about",
    name: "About MAFA",
    description:
      "Discover MAFA’s mission, vision, values, and QHSE commitments across Africa.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://mafa.com",
      name: "MAFA",
      description:
        "MAFA is a multisector company operating across catering, cleaning, hotel logistics, training, agro-processing, and strategic services.",
    },
    inLanguage: "en",
  }}
>
  <MainSection
    title="About MAFA"
    subTitle="Since its creation, MAFA has been dedicated to delivering high-quality services to private and public partners across Africa. Its multisectoral approach addresses today’s challenges in sustainability, hygiene, and operational performance."
    btnExists={false}
  />

  {
    articles.map((article) =>
      article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      )
    )
  }

  <FeaturesStats
    title="Our Impact"
    subTitle="MAFA combines sector expertise, rigorous QHSE standards, and proximity to partners to drive measurable results across Africa."
    mainStatTitle="6"
    mainStatSubTitle="complementary sectors serving partners across the continent"
    stats={[
      {
        stat: "100%",
        description: "compliance with international QHSE standards",
      },
      {
        stat: "Pan-African",
        description: "reach and operational experience",
      },
      {
        stat: "360°",
        description: "support from strategy to field execution",
      },
    ]}
  />
</MainLayout>

