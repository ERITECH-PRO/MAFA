---
// Import the necessary dependencies
import { Image } from "astro:assets";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import ReviewComponent from "@components/ui/blocks/ReviewComponent.astro";
import TypedText from "@components/ui/TypedText.astro";
// Define props from Astro
const {
  title,
  subTitle,
  primaryBtn,
  primaryBtnURL,
  secondaryBtn,
  secondaryBtnURL,
  withReview,
  avatars,
  starCount,
  rating,
  reviews,
  src,
  alt,
  width,
  height
} = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  rightText: string;
  subTitle?: string;
  primaryBtn?: string;
  primaryBtnURL?: string;
  secondaryBtn?: string;
  secondaryBtnURL?: string;
  withReview?: boolean;
  avatars?: Array<string>;
  starCount?: number;
  rating?: string;
  reviews?: string;
  src?: any;
  alt?: string;
  width?: number;
  height?: number;
}
---

<!-- Defining a grid container that holds all the content -->
<section
  class="relative mx-auto grid max-w-[85rem] gap-4 px-4 py-20 sm:px-6 md:grid-cols-2 md:items-center md:gap-8 lg:px-8 lg:py-24 2xl:max-w-full"
>
  <!-- Title and description -->
  <div>
    <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
    <h1
      class="text-4xl font-bold tracking-tight text-neutral-800 dark:text-white sm:text-6xl relative z-10"
    >
      <span class="font-bold text-neutral-800 dark:text-white">MAFA â€” </span>
      <span id="typed-rest" data-resttext={Astro.props.rightText} class="text-orange-500 dark:text-orange-400"></span>
      <span id="typed-cursor" class="typed-cursor text-orange-500 dark:text-orange-400">|</span>
    </h1>
    <script type="module" is:inline>
      window.addEventListener('DOMContentLoaded', () => {
        const el = document.getElementById('typed-rest');
        const cursor = document.getElementById('typed-cursor');
        if (el && cursor) {
          const variants = (el.dataset.resttext || '').split('|').map(s => s.trim()).filter(Boolean);
          if (!variants.length) return;
          let v = 0;
          let isTyping = false;
          
          function typeText(text, cb) {
            isTyping = true;
            el.textContent = '';
            let i = 0;
            function typeWriter() {
              if (i < text.length) {
                el.textContent += text.charAt(i);
                i++;
                setTimeout(typeWriter, 50);
              } else {
                isTyping = false;
                if (cb) { setTimeout(cb, 1600); }
              }
            }
            typeWriter();
          }
          
          function eraseText(cb) {
            isTyping = true;
            let len = el.textContent.length;
            function erase() {
              if (len > 0) {
                el.textContent = el.textContent.slice(0, --len);
                setTimeout(erase, 30);
              } else {
                isTyping = false;
                if (cb) cb();
              }
            }
            erase();
          }
          
          function loop() {
            typeText(variants[v], () => {
              eraseText(() => {
                v = (v + 1) % variants.length;
                loop();
              });
            });
          }
          
          setTimeout(loop, 300);
        }
      });
    </script>
    {subTitle &&
    <p
      class="mt-3 text-pretty text-lg leading-relaxed text-neutral-600 dark:text-neutral-300 lg:w-4/5 relative z-10"
    >
      {subTitle}
    </p>
  }
    <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
    <div class="mt-7 grid w-full gap-3 sm:inline-flex relative z-10">
      {primaryBtn && 
      <PrimaryCTA title={primaryBtn} url={primaryBtnURL} />
      }
      {secondaryBtn && 
      <SecondaryCTA title={secondaryBtn} url={secondaryBtnURL} />
      }
    </div>

    <!-- Review Section: This section presents avatars, review ratings and the number of reviews -->
    { withReview ? (
    <div class="relative z-10">
      <ReviewComponent avatars={avatars} starCount={starCount} rating={rating} reviews={reviews} />
    </div>
    ) : "" }

  </div>
  <!-- Hero Image Section -->
  <div class="flex w-full relative z-10">
      <div class="top-12 overflow-hidden">
	{src && alt &&
	<Image
        src={src}
        alt={alt}
        width={width || 1200}
        height={height || 800}
        class="h-full w-full scale-110 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"avif"}
        id="marmite-image"
	 />
	}
    </div>
  </div>
</section>

<style>
  .typed-cursor {
    animation: blink 1s step-end infinite;
    margin-left: 2px;
  }

  @keyframes blink {
    from, to { opacity: 1; }
    50% { opacity: 0; }
  }
  
  /* Ensure section content is above network background */
  section {
    position: relative;
    z-index: 1;
  }
</style>
